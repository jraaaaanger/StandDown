<nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
  <div class="row">
    <div class="small-12 columns sign-nav">
      <% if current_user %>
        <div class="nav-clock">
          <div id="user-time-zone" style="display:none"><%= current_user.team.time_zone.name %></div>
          <div id="user-time" class="nav-time"></div>
          <div class="timezone clearfix"><%= "#{current_user.team.location}" %></div>
        </div>
      <% end %>
      <h3 class="logo"><%= link_to "STANDDOWN", root_path %></h3>
      <% if user_signed_in? %>
        <%= link_to("Sign Out", destroy_user_session_path, method: :delete,
          class: "sign-links user-signs") %>
        <%= link_to(current_user.team.name, team_path(current_user.team),
        class: "sign-links user-signs") %>
        <%= link_to(current_user.team.organization.name, organization_path(current_user.team.organization),
          class: "sign-links user-signs") %>
      <% else %>
        <%= link_to("Sign Up", new_user_registration_path,
          class: "sign-links user-signs") %>
        <%= link_to("Sign In", new_user_session_path,
          class: "sign-links user-signs") %>
      <% end %>
    </div>
  </div>
</nav>
