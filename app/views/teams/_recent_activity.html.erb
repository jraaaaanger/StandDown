<% @last_answers.each do |a| %>
<div class="user-response">
  <div class="left-section">
    <%= link_to a.user.fullname, "mailto:#{a.user.email}" %>
    <%= a.submitter_time + " there | " + a.viewer_time(current_user.local_zone) +" here" %>
  </div>
  <div class="right-section">
    <%= a.question.body %>
    <%= a.body %>
  </div>
</div>
<% end %>
