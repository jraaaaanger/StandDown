<div class="master-form">

<h1 class ="form-title">Create an Organization</h1>

<%= form_for @organization do |f| %>
    <div class="field">
      <%= f.label :name, class: 'form-text'%>
      <p class="form-instructions">Your company or organization name.</p>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :start, "Standup Time", class: 'form-text'%>
      <p class="form-instructions"> This is when all users in your organization will start. Please enter as 12-hour with am/pm (i.e. 9:00 am), or as 24-hour time without it (i.e. 14:00).</p>
      <%= f.text_field :start, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :description, "Description", class: 'form-text'%>
        <p class="form-instructions">Completely optional. Don't worry, you can change this later.</p>
      <%= f.text_field :description, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Create", class: 'button radius' %>
    </div>
  <% end %>

</div>
